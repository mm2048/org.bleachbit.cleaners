<cleaner id="gentoo" os="linux">
  <label>gentoo</label>
  <description>orthadox file manager</description>
  <running type="exe">gentoo</running>
  <option id="dir_history">
    <label>Directory History</label>
    <description>Deletes the directory history</description>
    <action command="delete" search="file" path="~/.config/gentoo/dirhistory"/>
  </option>
</cleaner>
