<cleaner id="zeitgeist" os="linux">
  <label>Zeitgeist</label>
  <description>event logging</description>
  <option id="database">
    <label>Database</label>
    <description>Delete the logged events database</description>
    <action command="delete" search="glob" path="~/.local/share/zeitgeist/activity.sq*"/>
    <action command="delete" search="walk.files" path="~/.local/share/zeitgeist/fts-index/"/>
  </option>
</cleaner>
