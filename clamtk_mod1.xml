<cleaner id="clamtk">
  <label>ClamTK</label>
  <description>antivirus graphical interface</description>
  <option id="logs">
    <label>Scan Logs</label>
    <description>Delete scan logs</description>
    <action command="delete" search="glob" path="~/.clamtk/history/*.log"/>
  </option>
  <option id="submissions">
    <label>Submissions</label>
    <description>Delete local analysis data from file submissions</description>
    <action command="delete" search="glob" path="~/.clamtk/submit/*"/>
  </option>
</cleaner>
